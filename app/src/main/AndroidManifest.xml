<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.united.foodini" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Inventario"
            android:label="@string/title_activity_inventario" >
        </activity>
        <activity
            android:name=".Busqueda"
            android:label="@string/title_activity_busqueda" >
        </activity>
        <activity
            android:name=".Recetas"
            android:label="@string/title_activity_recetas" >
        </activity>
        <activity
            android:name=".Notes"
            android:label="@string/title_activity_notes" >
        </activity>
        <activity
            android:name=".meat"
            android:label="@string/title_activity_meat" >
        </activity>
        <activity
            android:name=".vegetables"
            android:icon="@drawable/app_icon_your_company"
            android:label="@string/title_activity_vegetables"
            android:logo="@drawable/app_icon_your_company"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailsActivity" />
        <activity android:name=".PlaybackOverlayActivity" />
        <activity android:name=".BrowseErrorActivity" />
        <activity
            android:name=".Milk"
            android:label="@string/title_activity_milk" >
        </activity>
    </application>

</manifest>
